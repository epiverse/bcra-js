{
  "name": "bcra-monorepo",
  "version": "1.0.1",
  "description": "JavaScript implementation of NCI's Breast Cancer Risk Assessment Tool (BCRAT; Gail Model)",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "clean": "rm -rf packages/*/dist apps/*/dist"
  },
  "keywords": [
    "breast-cancer",
    "risk-assessment",
    "bcrat",
    "gail-model",
    "medical",
    "healthcare",
    "epidemiology"
  ],
  "author": "Jeya Balaji Balasubramanian",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/epiverse/bcra-js"
  },
  "bugs": {
    "url": "https://github.com/epiverse/bcra-js/issues"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  }
}
